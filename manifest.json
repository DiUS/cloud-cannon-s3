{
  "manifest_version": 2,

  "name": "DiUS Cloud Cannon Helper",
  "description": "Designed to make integrations more palatable in Cloud Cannon",
  "version": "1.0",
  "icons": { 
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png" 
  },
  "background": {
    "scripts": ["./app/js/background.js"],
    "persistent": false
  },
  "permissions": [
    "https://app.cloudcannon.com/*",
    "storage"
  ],
  "options_ui": {
    "page": "./app/options/options.html",
    "chrome_style": true
  }
}